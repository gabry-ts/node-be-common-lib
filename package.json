{
  "name": "@tih/common",
  "version": "1.0.0",
  "description": "Common TypeScript utilities for auth, email, and OTP operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "prepare": "husky install",
    "release": "node scripts/release.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "docs": "typedoc --out docs src",
    "clean": "rimraf dist coverage docs",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "aws",
    "cognito",
    "authentication",
    "user-management",
    "email",
    "otp"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.x.x",
    "@nestjs/common": "^9.x.x",
    "aws-sdk": "^2.1692.0",
    "nodemailer": "^6.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.x.x",
    "@commitlint/config-conventional": "^18.x.x",
    "@types/jest": "^29.x.x",
    "@types/node": "^22.14.0", 
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^6.x.x",
    "@typescript-eslint/parser": "^6.x.x",
    "aws-sdk-client-mock": "^4.1.0",
    "conventional-changelog-cli": "^4.x.x",
    "eslint": "^8.x.x",
    "eslint-config-prettier": "^8.x.x",
    "eslint-plugin-prettier": "^4.x.x",
    "husky": "^8.x.x",
    "jest": "^29.x.x",
    "lint-staged": "^15.x.x",
    "prettier": "^2.x.x",
    "rimraf": "^5.x.x",
    "semver": "^7.x.x",
    "ts-jest": "^29.x.x",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.x",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
